<body>
<%- include('partials/header.ejs') %>
<section class="container">
<h1 class="center-text">Registration Page</h1><br><hr>

<!-- following section originally authored by Professor Richard Krasso. Source: https://github.com/buwebdev/web-340/blob/master/week-6/fms/views/fruit-create.ejs-->

    <div class="card center-div">
        <div class="card-title"><h4>Registration Details</h4></div>
        <div class="card-content">
            <div class="form">
                <form action="/register" method="post">
                    <div class="form-field">
                        <label for="customerId">Customer ID</label><br />
                        <input class="input" type="text" name="customerId" id="customerId" required autofocus>
                    </div>

                    <div class="form-field">
                        <label for="email">Email</label><br />
                        <input class="input" type="email" name="email" id="email" required>
                    </div>

                    <div class="form-field">
                        <input type="submit" value="Register" class="btn btn-primary full-width">
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>

<%- include('partials/footer.ejs') %>

